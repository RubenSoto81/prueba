{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "web",
            "type": "node",
            "request": "launch",
            "args": [
                "wdio.conf.js",
                "--spec",
                "${file}"
            ],
            "cwd": "${workspaceFolder}",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "autoAttachChildProcesses": true,
            "program": "${workspaceRoot}/node_modules/@wdio/cli/bin/wdio.js",
            "console": "integratedTerminal"
        },
    ]
}